<div class="p-business-item--reverse">
    <picture class="p-business-item__picture">
        <source class="p-business-item__source" srcset="../../images/common/<%= imgPc %>" media="(min-width: 756px)" /><!-- 756px以上で表示する画像 -->
        <img class="p-business-item__img" src="../../images/common/<%= imgSp %>" alt="企業概要"><!-- 756px以下で表示する画像 -->
    </picture>
    <div class="p-business-item__body">
        <h3 class="p-business-item__title"><%= title %></h3>
        <p class="p-business-item__text"><%= text %></p>
    </div>
</div>